<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/pepusia_horizontal"
        android:layout_alignParentTop="true"/>


    <ImageView
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kiss" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/heart"
        android:id="@+id/imageView3" />

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:padding="20sp"
    android:textSize="24sp"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/pepa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kisses"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:background="?attr/colorControlHighlight" />

    <TextView
        android:id="@+id/for_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dla"
        android:layout_below="@id/pepa"
        android:layout_toRightOf="@id/pepa"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="?attr/colorControlHighlight" />

    <TextView
        android:id="@+id/pepusia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pepusia"
        android:layout_below="@id/for_"
        android:layout_toRightOf="@id/for_"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="?attr/colorControlHighlight"  />

</RelativeLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView3"
        android:padding="20sp">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/colorControlHighlight"
            android:text="@string/from"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/adorek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/from"
            android:background="?attr/colorControlHighlight"
            android:text="@string/adorek"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </RelativeLayout>


</RelativeLayout>
